<h2>Editing user</h2>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, url: update_a_user_path, method: :put) do |f| %>
    <%= render 'shared/error_messages', object: @user %>
      
      <%= f.label :full_name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= select_tag 'user[group_ids][]', options_for_select(
            Group.all.map {|u| [u.name, u.id]}, 
            @user.groups.map {|j| j.id }
            ), :multiple => true, :size => 10 %>
      
    <div class="form-actions">
      <%= f.submit "Edit User", class: "btn btn-large btn-primary" %>
    </div>
    <% end %>
    <%= link_to 'Back', :back %>
  </div>
</div>